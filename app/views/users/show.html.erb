<div class="container">

<div class="row">
    <div class="col-sm-6">
        <h1><%= @user.full_name %> <%= "(#{@user.approval_rating})" %></h1>
            <br>
        <h4>Username: <%= @user.username %></h4>
        <h4>Likes: <%= @user.display_likes %> </h4> 
        <h4>Total Exchanges: <%= @user.exchanges.size + @user.inactive_listings.size  %> </h4>
            <br>
        <h4> Balance: $<%= @user.display_balance %> </h4>
        <h5> <%= link_to "Add to Balance", addmoney_path %> </h5>
    </div>
    <div class="col-sm-6">
        <br>
        <img src="https://media.giphy.com/media/rPoYAKVYDhdh6/giphy.gif" class="img-responsive center-block" width="350px">
    </div>
</div>   
    <br><br>
<div class="row">
    <div class="col-sm-6">
        <h2>My Purchases:</h2>
        <% @user.exchanges.each do |exchange| %>
            <%= link_to exchange.display_purchase, exchange_path(exchange) %><br>
        <% end %>
    </div>
    <div class="col-sm-6">
        <h2>My Sales:</h2>
        <% @user.sales.each do |exchange| %>
            <%= link_to exchange.display_sale, exchange_path(exchange) %><br>
        <% end %>
    </div>
</div>
    <br><br>
<div class="row">
    <div class="col-sm-6">
        <h2>My Active Listings:</h2>
        <% @user.active_listings.each do |listing| %>
            <%= link_to "#{listing.product.name} created on #{listing.created_at.strftime("%b %e %Y")}", listing_path(listing) %><br>
        <% end %>
    </div>
    <div class="col-sm-6">
        <h2>My Closed Listings</h2>
        <% @user.inactive_listings.each do |listing| %>
            <%= link_to "#{listing.product.name} closed on #{listing.updated_at.strftime("%b %e %Y")}", listing_path(listing)%><br>
        <% end %>
    </div>

</div>

</div>